# Database
DATABASE_URL="postgresql://user:password@localhost:5432/inspector_db?schema=public"

# JWT Configuration
JWT_SECRET="your-secret-key-here"
JWT_EXPIRATION_TIME="1h"
JWT_REFRESH_SECRET="your-refresh-secret-key-here"
JWT_REFRESH_EXPIRATION_TIME="7d"

# Backblaze B2 Cloud Storage Configuration
B2_KEY_ID="your-b2-key-id"
B2_APP_KEY="your-b2-application-key"
B2_ENDPOINT="https://s3.us-west-000.backblazeb2.com"
B2_REGION="us-west-000"
B2_BUCKET_NAME="inspector-photos"
B2_FILE_ENDPOINT="https://f000.backblazeb2.com"

# Redis Configuration (Upstash)
# Required for blacklist token caching to reduce database load
# Get your Redis URL from: https://upstash.com/
REDIS_URL="redis://default:YOUR_UPSTASH_PASSWORD@YOUR_UPSTASH_HOST:PORT"

# Optional: Enable/disable blacklist cache (default: true if REDIS_URL is set)
# ENABLE_BLACKLIST_CACHE=true

# Optional: TTL for blacklist cache in seconds (default: 86400 = 24 hours)
# BLACKLIST_CACHE_TTL=86400

# Server Configuration
PORT=3000
